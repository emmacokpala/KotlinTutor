<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Profile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin20"
        android:layout_marginEnd="@dimen/margin20"
        android:layout_marginStart="@dimen/margin20">

        <TextView
            android:id="@+id/firstname_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:textSize="@dimen/text16"
            android:textStyle="normal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/firstname_text_display"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment"
            android:textSize="@dimen/text16"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/lastname_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/last_name"
            android:textSize="@dimen/text16"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin10"
            app:layout_constraintTop_toBottomOf="@id/firstname_text"
            app:layout_constraintStart_toStartOf="@id/firstname_text"/>

        <TextView
            android:id="@+id/lastname_text_display"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment"
            android:textSize="@dimen/text16"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin10"
            app:layout_constraintTop_toBottomOf="@id/firstname_text_display"
            app:layout_constraintStart_toStartOf="@id/firstname_text_display"/>


        <TextView
            android:id="@+id/username_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/last_name"
            android:textSize="@dimen/text16"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin10"
            app:layout_constraintTop_toBottomOf="@id/lastname_text"
            app:layout_constraintStart_toStartOf="@id/lastname_text"/>

        <TextView
            android:id="@+id/username_text_display"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment"
            android:textSize="@dimen/text16"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin10"
            app:layout_constraintTop_toBottomOf="@id/lastname_text_display"
            app:layout_constraintStart_toStartOf="@id/lastname_text_display"/>


        <TextView
            android:id="@+id/email_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/last_name"
            android:textSize="@dimen/text16"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin10"
            app:layout_constraintTop_toBottomOf="@id/username_text"
            app:layout_constraintStart_toStartOf="@id/firstname_text"/>

        <TextView
            android:id="@+id/email_text_display"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment"
            android:textSize="@dimen/text16"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin10"
            app:layout_constraintTop_toBottomOf="@id/username_text_display"
            app:layout_constraintStart_toStartOf="@id/username_text_display"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>