<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused and not pressed-->
    <item android:color="@color/kodecamp_green_100" android:state_focused="true" android:state_pressed="false" />

    <!-- Focused and pressed-->
    <item android:color="@color/kodecamp_blue_100" android:state_focused="true" android:state_pressed="true" />

    <!-- Unfocused and pressed-->
    <item android:color="@color/kodecamp_blue_100" android:state_focused="false" android:state_pressed="true" />

    <!-- Default Color-->
    <item android:color="@color/kodecamp_green_100"/>
</selector>